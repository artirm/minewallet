<%= form_for(@rule) do |f| %>
  <% if @rule.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@rule.errors.count, "error") %> prohibited this rule from being saved:</h2>

      <ul>
      <% @rule.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div id="field" class="control-group">
    <%= f.label :title, :class=>"control-label" do%>Название<% end %>
    <div class="controls">
      <%= f.text_field :title, :class=>"input-xlarge" %>
      <span class="help-inline"></span>
    </div>
  </div>

  <div id="field" class="control-group">
    <%= f.label :account_id, :class=>"control-label" do%>Кошелек<% end %>
    <div class="controls">
      <%= f.select(:account_id, options_from_collection_for_select(current_user.accounts.all, :id, :title, :selected => @rule.account_id) )%>
      <span class="help-inline"></span>
    </div>
  </div>

  <div id="field" class="control-group">
    <%= f.label :kind, :class=>"control-label" do%>Тип<% end %>
    <div class="controls">
      <%= f.select(:kind, options_for_select([['Расход', 0], ['Доход', 1]], @rule.kind))%>
      <span class="help-inline"></span>
    </div>
  </div>

  <div id="field" class="control-group">
    <%= f.label :tags, :class=>"control-label" do%>Тэги<% end %>
    <div class="controls">
      <%= f.text_field :tags, :class=>"input-xlarge" %>
      <span class="help-inline"></span>
    </div>
  </div>

  <div id="field" class="control-group">
    <%= f.label :amount, :class=>"control-label" do%>Размер<% end %>
    <div class="controls">
      <%= f.text_field :amount, :class=>"input-xlarge" %>
      <span class="help-inline"></span>
    </div>
  </div>

  <div id="field" class="control-group">
    <%= f.label :description, :class=>"control-label" do%>
      Описание
    <% end %>
    <div class="controls">
      <%= f.text_area :description, :class=>"span6" %>
      <span class="help-inline"></span>
    </div>
  </div>
  <div id="field" class="control-group">
    <div class="controls">
      <div class="actions">
        <%= submit_tag  'Save', :type => :submit, :class => 'btn btn-primary' %>
        <%= submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger"%>
      </div>
    </div>
  </div>


<% end %>

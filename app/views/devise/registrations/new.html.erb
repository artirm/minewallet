<div class="container">
  <div class="row">
    <div class="span5 offset3 well">
      <legend>Регистрация в MineWallet Pre-Alpha</legend>
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <% flash.each do |key, value| %>
            <div class="alert alert-block alert-error fadeout" data-dismiss="alert">
            <a class="close">×</a>
            <%= value %>
            </div>
          <% end %>
          <%= f.email_field :email, :autofocus => true, :placeholder=> :email, :class=>"span5"%>
          <%= f.password_field :password, :placeholder=> :password, :class=>"span5"%>
          <%= f.password_field :password_confirmation, :placeholder => :password_confirmation, :class=>"span5"%>
          </label>
          <%= f.submit "Зарегистрировать", :class => "btn btn-info btn-block"%>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
</div>

